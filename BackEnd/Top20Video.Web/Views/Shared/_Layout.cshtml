    <!-- Ajax Process Start -->
    <div class="wait-pupup">
        <div class="wait-process">
            <img src="@Url.Content("~/Content/images/ajax-loader.gif")" alt="Please wait..." />
        </div>
    </div>
    <!-- Ajax Process End -->
    <script type="text/javascript">
        function preventBack() { window.history.forward(); }
        setTimeout("preventBack()", 0);
        window.onunload = function () { null };

        $(document).ajaxComplete(function (event, request, settings) {
            $('.wait-pupup').hide();
        });
        $(document).ajaxSend(function (event, request, settings) {
            $('.wait-pupup').show();

        });
        $(document).ajaxStart(function () {
            $('.wait-pupup').show();
        });

        $('body').on('click', '.alert .close', function (e) {
            $('.alert').slideUp();
        });

        $('body').on('keypress', '.number', function (e) {
            if (e.which != 8 && e.which != 0 && e.which != 46 && (e.which < 48 || e.which > 57)) {
                return false;
            }
            else
                return true;
        });
        function redirect(toUrl) {
            window.location = toUrl;
        }
        function refreshAfterOrder() {
            var pcount = $('.page-no span.active').length;
            if (pcount > 0) {
                var pNo = $('.page-no span.active').html();
                pageRequest(pNo);
            }
            else {
                asynList();
            }
        }
    </script>

